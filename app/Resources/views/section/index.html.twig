{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Sections</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Le titre de section</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td><a href="{{ path('admin_section_show', { 'id': section.id }) }}">{{ section.id }}</a></td>
                <td>{{ section.thetitle }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_section_new') }}">Cr√©er une nouvel section</a>
        </li>
    </ul>
{% endblock %}
