{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listes des articles</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Le titre</th>
                <th>Le texte</th>
                <th>La date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('admin_article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.thetitle }}</td>
                <td>{{ article.thetext }}</td>
                <td>{% if article.thedate %}{{ article.thedate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_article_show', { 'id': article.id }) }}">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_article_new') }}">Cre√©r un nouvel article</a>
        </li>
    </ul>
{% endblock %}
